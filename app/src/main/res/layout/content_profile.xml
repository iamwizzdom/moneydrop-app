<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity"
    tools:showIn="@layout/activity_profile"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/content_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <!-- TODO: Update blank fragment layout -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20"
                android:paddingBottom="@dimen/padding_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_10"
                    android:background="@drawable/layout_background_rounded">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:baselineAligned="false">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile_pic"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="@dimen/margin_30"
                                android:layout_centerInParent="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/unisex"
                                app:civ_border_color="@color/imageBorder"
                                app:civ_border_width="8dp" />

                            <ProgressBar
                                android:id="@+id/upload_photo_progress_bar"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/image_picker"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_camera"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:layout_marginBottom="@dimen/margin_15"
                                android:layout_marginEnd="@dimen/margin_5"
                                android:layout_alignBottom="@id/profile_pic"
                                android:layout_alignEnd="@id/profile_pic"
                                android:background="@drawable/layout_background_rounded_accent"
                                android:contentDescription="@string/select_image" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:layout_weight="1.2">

                            <TextView
                                android:id="@+id/account_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/text_view_style"
                                android:gravity="start"
                                android:text="@string/user_name"
                                android:textColor="@color/titleColorGray"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/account_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/text_view_style"
                                android:gravity="start"
                                android:textSize="14sp"
                                android:text="@string/email_address_hint"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/text_view_style"
                                android:gravity="start"
                                android:text="@string/view_reviews"
                                android:textColor="@color/colorAccent"
                                android:onClick="viewReviews"
                                android:drawablePadding="@dimen/padding_10"
                                app:drawableEndCompat="@drawable/ic_arrow_right_accent" />

                        </LinearLayout>

                    </LinearLayout>


                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_10"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:rating="0" />

                </LinearLayout>

                <TextView
                    style="@style/text_view_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_30"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:gravity="center"
                    android:text="@string/user_info"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_background_rounded"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding_15"
                    android:paddingTop="@dimen/padding_5"
                    android:paddingEnd="2dp"
                    android:paddingBottom="@dimen/padding_5">

                    <LinearLayout
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_underline"
                        android:onClick="editInfo"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingEnd="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15"
                        android:weightSum="2">

                        <TextView
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="start|center"
                            android:text="@string/name"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/username_text"
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:drawablePadding="@dimen/padding_15"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:text="@string/username"
                            android:textColor="@color/subtitleColorGray"
                            android:textSize="12sp"
                            app:drawableEndCompat="@drawable/ic_arrow_right" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_underline"
                        android:onClick="editInfo"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingEnd="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15"
                        android:weightSum="2">

                        <TextView
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="start|center"
                            android:text="@string/phone"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/phone_number_text"
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:drawablePadding="@dimen/padding_15"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:text="@string/phone_hint"
                            android:textColor="@color/subtitleColorGray"
                            android:textSize="12sp"
                            app:drawableEndCompat="@drawable/ic_arrow_right" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_underline"
                        android:onClick="editInfo"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingEnd="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15"
                        android:weightSum="2">

                        <TextView
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="start|center"
                            android:text="@string/email"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/email_text"
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:drawablePadding="@dimen/padding_15"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:text="@string/email_address_hint"
                            android:textColor="@color/subtitleColorGray"
                            android:textSize="12sp"
                            app:drawableEndCompat="@drawable/ic_arrow_right" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_underline"
                        android:onClick="editInfo"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingEnd="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15"
                        android:weightSum="2">

                        <TextView
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="start|center"
                            android:text="@string/gender"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gender_text"
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:drawablePadding="@dimen/padding_15"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:text="@string/male"
                            android:textColor="@color/subtitleColorGray"
                            android:textSize="12sp"
                            app:drawableEndCompat="@drawable/ic_arrow_right" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_underline"
                        android:onClick="editInfo"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingEnd="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15"
                        android:weightSum="2">

                        <TextView
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="start|center"
                            android:text="@string/date_of_birth"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dob_text"
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:drawablePadding="@dimen/padding_15"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:text="@string/date_of_birth_hint"
                            android:textColor="@color/subtitleColorGray"
                            android:textSize="12sp"
                            app:drawableEndCompat="@drawable/ic_arrow_right" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_underline"
                        android:onClick="editInfo"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingEnd="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15"
                        android:weightSum="2">

                        <TextView
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="start|center"
                            android:text="@string/country"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/country_text"
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:drawablePadding="@dimen/padding_15"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:text="@string/country_hint"
                            android:textColor="@color/subtitleColorGray"
                            android:textSize="12sp"
                            app:drawableEndCompat="@drawable/ic_arrow_right" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_underline"
                        android:onClick="editInfo"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingEnd="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15"
                        android:weightSum="2">

                        <TextView
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="start|center"
                            android:text="@string/state"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/state_text"
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:drawablePadding="@dimen/padding_15"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:text="@string/state_hint"
                            android:textColor="@color/subtitleColorGray"
                            android:textSize="12sp"
                            app:drawableEndCompat="@drawable/ic_arrow_right" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="editInfo"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingTop="@dimen/padding_15"
                        android:paddingEnd="@dimen/padding_15"
                        android:paddingBottom="@dimen/padding_15"
                        android:weightSum="2">

                        <TextView
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="start|center"
                            android:text="@string/address"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/address_text"
                            style="@style/text_view_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:drawablePadding="@dimen/padding_15"
                            android:gravity="end|center"
                            android:maxLines="1"
                            android:text="@string/address_hint"
                            android:textColor="@color/subtitleColorGray"
                            android:textSize="12sp"
                            app:drawableEndCompat="@drawable/ic_arrow_right" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_view_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_30"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:gravity="center"
                        android:text="@string/settings"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_background_rounded"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/padding_15"
                        android:paddingTop="@dimen/padding_5"
                        android:paddingEnd="2dp"
                        android:paddingBottom="@dimen/padding_5">

                        <LinearLayout
                            android:id="@+id/bvn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_underline"
                            android:onClick="editInfo"
                            android:orientation="horizontal"
                            android:paddingStart="5dp"
                            android:paddingTop="@dimen/padding_15"
                            android:paddingEnd="@dimen/padding_15"
                            android:paddingBottom="@dimen/padding_15">

                            <TextView
                                style="@style/text_view_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:text="@string/bvn"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:drawableEndCompat="@drawable/ic_arrow_right" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bank_statement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_underline"
                            android:onClick="editInfo"
                            android:orientation="horizontal"
                            android:paddingStart="5dp"
                            android:paddingTop="@dimen/padding_15"
                            android:paddingEnd="@dimen/padding_15"
                            android:paddingBottom="@dimen/padding_15">

                            <TextView
                                style="@style/text_view_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:text="@string/bank_statement"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:drawableEndCompat="@drawable/ic_arrow_right" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/change_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_underline"
                            android:onClick="editInfo"
                            android:orientation="horizontal"
                            android:paddingStart="5dp"
                            android:paddingTop="@dimen/padding_15"
                            android:paddingEnd="@dimen/padding_15"
                            android:paddingBottom="@dimen/padding_15">

                            <TextView
                                style="@style/text_view_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:text="@string/change_password"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:drawableEndCompat="@drawable/ic_arrow_right" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/privacy_policy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_underline"
                            android:onClick="editInfo"
                            android:orientation="horizontal"
                            android:paddingStart="5dp"
                            android:paddingTop="@dimen/padding_15"
                            android:paddingEnd="@dimen/padding_15"
                            android:paddingBottom="@dimen/padding_15">

                            <TextView
                                style="@style/text_view_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:text="@string/privacy_policy"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:drawableEndCompat="@drawable/ic_arrow_right" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/conditions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_underline"
                            android:onClick="editInfo"
                            android:orientation="horizontal"
                            android:paddingStart="5dp"
                            android:paddingTop="@dimen/padding_15"
                            android:paddingEnd="@dimen/padding_15"
                            android:paddingBottom="@dimen/padding_15">

                            <TextView
                                style="@style/text_view_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:text="@string/conditions"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:drawableEndCompat="@drawable/ic_arrow_right" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="editInfo"
                            android:orientation="horizontal"
                            android:paddingStart="5dp"
                            android:paddingTop="@dimen/padding_15"
                            android:paddingEnd="@dimen/padding_15"
                            android:paddingBottom="@dimen/padding_15">

                            <TextView
                                style="@style/text_view_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:text="@string/contact_us"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:drawableEndCompat="@drawable/ic_arrow_right" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>